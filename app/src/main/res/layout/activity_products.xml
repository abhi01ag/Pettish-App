<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/purple_500"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:backgroundTint="@color/ic_launcher_background">

        <Button
            android:id="@+id/button2"
            android:layout_width="424dp"
            android:layout_height="85dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#DD4DD0"
            android:fontFamily="@font/fontyes"
            android:text="Pet Products"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="416dp"
            android:layout_height="161dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dogtoy" />

            <LinearLayout
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="259dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    android:text="Jaspo Superbite Spike Hard Ball, TPU Material Puppy Teething Toy for Dogs  "
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="266dp"
                    android:layout_height="19dp"
                    android:layout_weight="1"
                    android:text="₹159" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="132dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/chaara" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button13"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F44336"
                    android:text="Buy Now" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="410dp"
            android:layout_height="162dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dogtoy2" />

            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="253dp"
                    android:layout_height="66dp"
                    android:text="Petfun Rubber Chew Toy, Rubber Toy, Squeaky Toy For Dog and Cat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₹185" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="129dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/starratting" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button12"
                    android:layout_width="126dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#F44336"
                    android:text="Buy Now" />


            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
